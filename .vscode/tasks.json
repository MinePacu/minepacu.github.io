{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Jekyll Server",
      "type": "shell",
      "command": "./tools/run.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Runs the Jekyll server with live reload.",
      "options": {
        "env": {
          "LANG": "ko_KR.UTF-8",
          "LC_ALL": "ko_KR.UTF-8",
          "LC_CTYPE": "ko_KR.UTF-8",
          "RUBYOPT": "-Eutf-8"
        }
      }
    },
    {
      "label": "Build Jekyll Site",
      "type": "shell",
      "command": "./tools/test.sh",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "detail": "Build the Jekyll site for production.",
      "options": {
        "env": {
          "LANG": "ko_KR.UTF-8",
          "LC_ALL": "ko_KR.UTF-8",
          "LC_CTYPE": "ko_KR.UTF-8",
          "RUBYOPT": "-Eutf-8"
        }
      }
    },
    {
      "label": "Run Jekyll Server (UTF-8)",
      "type": "shell",
      "command": "./tools/serve-utf8.sh",
      "group": "build",
      "problemMatcher": [],
      "detail": "Runs the Jekyll server with UTF-8 encoding support for Korean paths."
    }
  ]
}
